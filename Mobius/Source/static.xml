<!--
    Non-editable file of system information I want to keep out of compiled code.
    Similar in style to help.xml and symbols.xml
-->

<StaticConfig>

  <Tree name='sessionGlobal'>
    <Tree name='General'/>
    <Tree name='Sync'/>
  </Tree>
  
  <Tree name='sessionAudioTrack'>
    <Tree name='General'/>
    <Tree name='Mixer'/>
    <Tree name='Ports'/>
  </Tree>
  
  <Tree name='sessionMidiTrack'>
    <Tree name='General'/>
    <Tree name='Follower'/>
    <Tree name='LoopSwitch'/>
  </Tree>

  <Form name='sessionGlobalGeneral' title='Global Parameters'
        symbols='inputLatency,outputLatency,longPress,noiseFloor,maxLoops,monitorAudio,quickSave,spreadRange,fadeFrames,maxSynDrift,defaultPreset'/>

  <Form name='sessionGlobalSync' title='Synchronization'
        symbols='TransportBeatsPerBar,transportBarsPerLoop,transportMidiClocksWhenStopped,transportMidiEnable,transportMinTempo,transportMaxTempo,transportManualStart,hostBeatsPerBar,hostBeatsPerLoop,hostOverrideTimeSignature,midiBeatsPerBar,midiBarsPerLoop'/>
  
  <Form name='sessionAudioTrackGeneral'
        symbols='name,groupName,trackPreset,focus'/>
    
  <Form name='sessionAudioTrackMixer'
        symbols='input,output,feedback,altFeedback,pan,mono'/>
  
  <Form name='sessionAudioTrackPorts'
        symbols='inputPort,outputPort,pluginInputPort,pluginOutputPort'/>
  
  <Form name='sessionAudioTrackSync'
        symbols='syncSource,syncUnit,trackSyncUnit'/>
  

  <!-- todo: inputDevice, outputDevice, midiThru,trackGroup -->
  <Form name='sessionMidiTrackGeneral'
        symbols='midiChannelOverride,*spacer*,syncSource,trackSyncUnit,slaveSyncUnit,beatsPerBar,*spacer*,loopCount,quantize,subcycles'/>

  <Form name='sessionMidiTrackFollower' title='Follower Parmeters'
        symbols='leaderType,leaderTrack,followRecord,followRecordEnd,followerMuteStart,followMute,leaderSwitchLocation,followQuantizeLocation'/>
  
  <Form name='sessionMidiTrackLoopSwitch' title='Loop Switch Options'
        symbols='switchQuantize,emptyLoopAction,switchDuration,switchLocation'/>

</StaticConfig>
